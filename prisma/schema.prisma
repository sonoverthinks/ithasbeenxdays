// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tweet {
  id        String   @id @default(cuid())
  tweetId   String   @unique
  content   String
  createdAt DateTime
  retweetedTweet String?
  repostedTweet String?
  topics    Topic[]
}

model Topic {
  id     String   @id @default(cuid())
  name   String   @unique
  tweets Tweet[]
}